@model Abundance_SN.Models.RegisterViewModel
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<main class="site-main product-list product-grid">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="col-sm-12 shadow" style="background:#fff; padding: 25px; margin-bottom:20px;">
                <div class="col-md-12">
                    @if (TempData["Message"] != null)
                    {
                        @Html.Partial("_Message", (Abundance_SN.Model.Model.Message)TempData["Message"])
                    }
                </div>
                @*<div class="row" id="checkoutbtn">
                    <div class="col-md-12 m-b-10">
                        <a href="@Url.Action("Checkout", "Checkout", new {area = "Customer", id = "anonymous"})" class="btn btn-primary margin-bottom-none">CONTINUE TO CHECKOUT</a>
                    </div>
                </div>
                <br />*@


                <h3 class="title-login col-md-12 text-center"style="font-weight:800">Create an account</h3>
                @using (Html.BeginForm("Register", "Account", new { Area = "Security" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    <form class="register col-md-12" method="post">
                        <p class="form-row form-row-wide col-md-12">
                            @Html.LabelFor(model => model.Person.Surname, "Surname", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Person.Surname, new { placeholder = "Enter Surname", required = "required", @class = "form-control" })
                        </p>
                        <p class="form-row form-row-wide col-md-12">
                            @Html.LabelFor(model => model.Person.FirstName, "First Name", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Person.FirstName, new { placeholder = "Enter First Name", required = "required", @class = "form-control" })
                        </p>
                        <p class="form-row form-row-wide col-md-12">
                            @Html.LabelFor(model => model.Person.OtherName, "Other Name", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Person.OtherName, new { placeholder = "Enter Other Name", @class = "form-control" })
                        </p>
                        <p class="form-row form-row-wide col-md-12">
                            @Html.LabelFor(model => model.Person.PhoneNumber, "Mobile No*", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Person.PhoneNumber, new { placeholder = "Enter Mobile No", required = "required", @class = "form-control" })
                        </p>
                        <p class="form-row form-row-wide col-md-12">
                        @Html.LabelFor(model => model.Person.Address, "Address", new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Person.Address, new { placeholder = "Enter Address", required = "required", @class = "form-control" })
                    </p>
                        <p class="form-row form-row-wide col-md-12">
                            @Html.LabelFor(model => model.Person.Email, "Email Address", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Person.Email, new { placeholder = "Enter Email Address", required = "required", @class = "form-control" })
                        </p>
                        @*<ul>
                                <li><label class="inline"><input type="checkbox"><span class="input"></span>Sign Up for Newsletter</label></li>
                            </ul>*@
                        <p class="form-row form-row-wide col-md-12">
                            @Html.LabelFor(model => model.Password, "Password", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Password, new { placeholder = "**************", type = "password", required = "required", @class = "form-control" })
                        </p>
                        <p class="form-row form-row-wide col-md-12">
                            @Html.LabelFor(model => model.ConfirmPassword, "Confirm Password", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.ConfirmPassword, new { placeholder = "**************", type = "password", required = "required", @class = "form-control" })
                        </p>
                        <p class="form-row form-row-wide col-md-12">
                            @*<button class="btn btn-primary margin-bottom-none" type="submit">Register</button>*@
                            <input type="submit" value="Register" name="Submit" class="button-submit btn-block" style="background: #31639f">
                        </p>
                    </form>
                }
            </div>

        </div>
    </div>
    </main>

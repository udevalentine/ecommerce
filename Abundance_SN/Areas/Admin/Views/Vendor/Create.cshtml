@model Abundance_SN.Models.ProductViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    @Html.Partial("_Message", (Abundance_SN.Model.Model.Message)TempData["Message"])
}


@using (Html.BeginForm("Create", "Vendor", new {area = "admin"}, FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <br/>

    <div class="panel panel-default">

        <div class="panel-body">

            <div class="row">

                <div class="col-md-12">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">

                                @Html.LabelFor(model => model.Vendors.Name, "Name", new { @class = "control-label " })
                                @Html.TextBoxFor(model => model.Vendors.Name, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.Vendors.Name, null, new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">

                                @Html.LabelFor(model => model.Vendors.Address, "Address", new {@class = "control-label "})
                                @Html.TextBoxFor(model => model.Vendors.Address, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.Vendors.Address, null, new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Vendors.PhoneNumber, "Mobile Number", new {@class = "control-label "})
                                @Html.TextBoxFor(model => model.Vendors.PhoneNumber, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.Vendors.PhoneNumber, null, new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="col-md-6 mt-5">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Vendors.Active, "Active", new {@class = "control-label "})
                                @Html.CheckBoxFor(model => model.Vendors.Active, new {@class = ""})
                                @Html.ValidationMessageFor(model => model.Vendors.Active, null, new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col--2"></div>
                            <div class="col-sm-10">
                                <input class="btn btn-success mr5" type="submit" name="submit" value="Create"/>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
}
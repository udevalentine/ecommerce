@model Abundance_SN.Models.ProductViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="checkout">
    <div class="col-md-4 checkout-left-basket">
        <ul id="productList">
            <h4>Order List</h4>
            @for (int i = 0; i < Model.GroupOrder.Count; i++)
            {
                for (int j = i; j < Model.CustomerOrders.Count; j++)
                {
                    <li> @Model.CustomerOrders[j].CustomerOrderNumber </li>
                    <li>
                        <span>$@Model.CustomerOrders[j].Amount</span>
                    </li>
                }



            }
        </ul>
    </div>
</div>

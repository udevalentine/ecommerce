@model Abundance_SN.Models.ManageUserViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <main class="site-main product-list product-grid">
        <div class="row">
            <div class="col-md-4"></div>

            <div class="col-sm-4">
                <div class="col-md-12 shadow" style="background:#fff; padding: 5px 5px;">
                    @if (TempData["Message"] != null)
                    {
                        @Html.Partial("_Message", (Abundance_SN.Model.Model.Message)TempData["Message"])
                    }
                </div>

                <div class="col-md-12 shadow" style="background:#fff; padding: 25px;">
                    <h5 class="title-login">Change your Account password</h5>


                    
                        <div class="form-horizontal custom-text-black">


                            <div class="login">
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.Email)

                                <div class="form-group form-row form-row-wide">
                                    @Html.LabelFor(model => model.OldPassword, new { @class = "control-label col-md-5", @style = "text-align:left;" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.OldPassword, new { placeholder = "************", required = "required", type = "password", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.OldPassword)
                                    </div>
                                </div>

                                <div class="form-group form-row form-row-wide">
                                    @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-md-5", @style = "text-align:left;" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.NewPassword, new { placeholder = "************", required = "required", type = "password", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.NewPassword)
                                    </div>
                                </div>

                                <div class="form-group form-row form-row-wide">
                                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-5", @style = "text-align:left;" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.ConfirmPassword, new { placeholder = "************", required = "required", type = "password", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                    </div>
                                </div>

                                <div class="form-group form-row form-row-wide">
                                    <div class=" col-md-10">
                                        <input type="submit" value="Save" class="button-submit" style="color:#fff" />
                                    </div>
                                </div>
                            </div>
                        </div>
                   
                </div>
            </div>
        </div>
        </main>
        }
